# =========================================================================
# CONFIGURAÇÕES CUSTOMIZADAS DO MYSQL - GOALMANAGER
# =========================================================================
# Arquivo: my.cnf
# Descrição: Configurações otimizadas para desenvolvimento e produção
# =========================================================================

[mysqld]
# =========================================================================
# CONFIGURAÇÕES GERAIS
# =========================================================================
default_storage_engine = InnoDB
default_table_type = InnoDB

# Charset e Collation
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Timezone
default_time_zone = '+00:00'

# =========================================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =========================================================================
# Buffer Pool (ajustar conforme RAM disponível)
innodb_buffer_pool_size = 256M
innodb_buffer_pool_instances = 1

# Log Files
innodb_log_file_size = 64M
innodb_log_files_in_group = 2
innodb_log_buffer_size = 16M

# Flush settings
innodb_flush_method = O_DIRECT
innodb_flush_log_at_trx_commit = 1

# Thread settings
max_connections = 200
thread_cache_size = 50
table_open_cache = 2000

# Query cache (desabilitado no MySQL 8.0+)
# query_cache_type = 0
# query_cache_size = 0

# =========================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =========================================================================
# SQL Mode seguro
sql_mode = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# Desabilitar symbolic links por segurança
symbolic_links = 0

# Configurações de rede
bind_address = 0.0.0.0
max_allowed_packet = 64M

# =========================================================================
# CONFIGURAÇÕES DE LOGGING
# =========================================================================
# General Log (desabilitado para performance)
general_log = 0
general_log_file = /var/log/mysql/general.log

# Error Log
log_error = /var/log/mysql/error.log

# Slow Query Log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# Binary Log (para replicação - opcional)
# log_bin = /var/log/mysql/mysql-bin.log
# binlog_format = ROW
# expire_logs_days = 7

# =========================================================================
# CONFIGURAÇÕES DO INNODB
# =========================================================================
# File per table
innodb_file_per_table = 1

# Auto extend increment
innodb_autoextend_increment = 64

# Timeout settings
innodb_lock_wait_timeout = 50
wait_timeout = 300
interactive_timeout = 300

# =========================================================================
# CONFIGURAÇÕES ESPECÍFICAS PARA GOALMANAGER
# =========================================================================
# Otimizações para o padrão de uso da aplicação

# Tabelas temporárias
tmp_table_size = 64M
max_heap_table_size = 64M

# Configurações de sort e join
sort_buffer_size = 2M
join_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 2M

# MyISAM (caso necessário)
key_buffer_size = 32M

[mysql]
default_character_set = utf8mb4

[client]
default_character_set = utf8mb4